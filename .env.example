# Stock API Configuration
PORT=8000
ENVIRONMENT=development

# Database Configuration
# For local development (SQLite)
DATABASE_URL=sqlite:///./stock_data.db

# For production (PostgreSQL on Render)
# DATABASE_URL=postgresql://user:password@host:port/database

# API Configuration
API_VERSION=1.0.0
API_TITLE=EquiAlert Stock API
API_DESCRIPTION=Microservice for fetching stock prices and analytics

# Cache Configuration
CACHE_TTL_CURRENT_PRICE=300  # 5 minutes in seconds
CACHE_TTL_HISTORICAL=3600    # 1 hour in seconds
CACHE_TTL_INDICATORS=3600    # 1 hour in seconds

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Scraping Configuration
SCRAPER_TIMEOUT=10           # seconds
SCRAPER_MAX_RETRIES=3
SCRAPER_BACKOFF_FACTOR=2

# Background Tasks
SCRAPER_INTERVAL_MINUTES=15  # How often to scrape top stocks
